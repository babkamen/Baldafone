<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bubblerubble"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.geymer.je.Gameplay.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.geymer.je.Gameplay.NewGame"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="de.geymer.je.Gameplay.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="de.geymer.je.Gameplay.Game"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="de.geymer.je.Gameplay.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="de.geymer.je.Gameplay.NewGame2"
            android:label="@string/title_activity_new_game2"
            android:windowSoftInputMode="adjustResize" 
            >
        </activity>
        <activity
            android:name="de.geymer.je.Gameplay.SplashScreen"
            android:label="@string/title_activity_splash_screen" 
            android:noHistory="true">
        </activity>
    </application>

</manifest>